<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | {{ site.title }}</title>
    <meta name="description" content="{{ excerpt | default(site.description) }}">
    <meta
    name="author" content="{{ author }}"> <!-- Open Graph -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ excerpt }}">
    <meta
    property="og:url" content="{{ site.url }}{{ page.url }}"> <!-- Favicon -->
    <link
    rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg"> <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet"> <!-- Bootstrap Icons -->
    <link
    rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"> <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <style>
      .post-content {
        font-size: 1.125rem;
        line-height: 1.8;
      }
      .post-content h2 {
        margin-top: 2.5rem;
        margin-bottom: 1rem;
      }
      .post-content h3 {
        margin-top: 2rem;
        margin-bottom: 0.75rem;
      }
      .post-content pre {
        background: #1e293b;
        color: #e2e8f0;
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
      }
      .post-content code {
        font-size: 0.9rem;
      }
      .post-content table {
        width: 100%;
        margin: 1.5rem 0;
      }
      .post-content table th,
      .post-content table td {
        padding: 0.75rem;
        border: 1px solid #e2e8f0;
      }
      .post-content table th {
        background: #f8fafc;
      }
      .post-content blockquote {
        border-left: 4px solid #6366f1;
        padding-left: 1.5rem;
        margin-left: 0;
        font-style: italic;
        color: #64748b;
      }
    </style>
  </head>
  <body>
    {% include "partials/header.njk" %}
    <article class="section">
      <div class="container">
        <div class="row justify-content-center">
          <div
            class="col-lg-8">
            <!-- Post Header -->
            <header class="mb-5">
              <div class="mb-3">
                {% for tag in tags %}
                  {% if tag != "posts" %}
                    <span class="badge bg-primary me-1">{{ tag }}</span>
                  {% endif %}
                {% endfor %}
              </div>
              <h1 class="display-5 fw-bold mb-3">{{ title }}</h1>
              <p class="lead text-muted">{{ excerpt }}</p>
              <div class="d-flex align-items-center text-muted mt-4">
                <i class="bi bi-person-circle fs-4 me-2"></i>
                <span class="me-4">{{ author }}</span>
                <i class="bi bi-calendar3 me-2"></i>
                <span>{{ date | dateFormat }}</span>
              </div>
            </header>
            <!-- Post Content -->
            <div class="post-content">
              {{ content | safe }}
            </div>
            <!-- Post Footer -->
            <footer class="mt-5 pt-5 border-top">
              <div class="d-flex justify-content-between align-items-center">
                <a href="/blog/" class="btn btn-outline-primary">
                  <i class="bi bi-arrow-left me-2"></i>Back to Blog
                </a>
                <div class="d-flex gap-2">
                  <a href="#" class="btn btn-outline-secondary btn-sm" title="Share on Twitter">
                    <i class="bi bi-twitter-x"></i>
                  </a>
                  <a href="#" class="btn btn-outline-secondary btn-sm" title="Share on LinkedIn">
                    <i class="bi bi-linkedin"></i>
                  </a>
                  <a href="#" class="btn btn-outline-secondary btn-sm" title="Copy link">
                    <i class="bi bi-link-45deg"></i>
                  </a>
                </div>
              </div>
            </footer>
          </div>
        </div>
      </div>
    </article>
    {% include "partials/footer.njk" %}
    <!-- Bootstrap JavaScript Bundle -->
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/main.js"></script>
  </body>
</html>